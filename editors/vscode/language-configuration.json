{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(cell|record|enum|if|for|while|loop|match|when|handle|defer|comptime|agent|pipeline|orchestration|machine|memory|guardrail|eval|effect|handler|trait|impl)\\b",
      "end": "^\\s*end\\b"
    }
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(cell|record|enum|if|else|for|while|loop|match|when|handle|defer|comptime|agent|pipeline|orchestration|machine|memory|guardrail|eval|effect|handler|trait|impl)\\b",
    "decreaseIndentPattern": "^\\s*(end|else)\\b"
  }
}
