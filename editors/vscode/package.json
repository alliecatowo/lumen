{
  "name": "lumen-lang",
  "displayName": "Lumen",
  "description": "Syntax highlighting and language support for the Lumen programming language",
  "version": "0.1.0",
  "publisher": "lumen-lang",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:lumen",
    "onLanguage:lumen-markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lumen",
        "aliases": [
          "Lumen",
          "lumen"
        ],
        "extensions": [
          ".lm"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "lumen-markdown",
        "aliases": [
          "Lumen Markdown"
        ],
        "extensions": [
          ".lm.md"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lumen",
        "scopeName": "source.lumen",
        "path": "./syntaxes/lumen.tmLanguage.json"
      },
      {
        "scopeName": "markdown.lumen.codeblock",
        "path": "./syntaxes/lumen-markdown.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.lumen": "lumen"
        }
      }
    ],
    "configuration": {
      "title": "Lumen",
      "properties": {
        "lumen.lspPath": {
          "type": "string",
          "default": "lumen-lsp",
          "description": "Path to the lumen-lsp binary. Defaults to finding it on PATH."
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  }
}
