{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lumen",
  "scopeName": "source.lumen",
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#strings" },
    { "include": "#raw-strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#cell-definition" },
    { "include": "#declaration-keywords" },
    { "include": "#control-keywords" },
    { "include": "#ai-keywords" },
    { "include": "#storage-types" },
    { "include": "#operators" },
    { "include": "#type-annotations" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.lumen",
          "match": "#.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.preprocessor.lumen",
          "match": "@(deterministic|version|doc_mode|location|strict)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lumen",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lumen",
              "match": "\\\\[\\\\\"nrt0{}]"
            },
            {
              "name": "meta.interpolation.lumen",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.definition.interpolation.begin.lumen" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.definition.interpolation.end.lumen" }
              },
              "patterns": [
                { "include": "source.lumen" }
              ]
            }
          ]
        }
      ]
    },
    "raw-strings": {
      "patterns": [
        {
          "name": "string.quoted.other.raw.lumen",
          "begin": "r\"",
          "end": "\""
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.lumen",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.octal.lumen",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.binary.lumen",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.float.lumen",
          "match": "\\b[0-9][0-9_]*(\\.[0-9][0-9_]*)?([eE][+-]?[0-9_]+)\\b"
        },
        {
          "name": "constant.numeric.float.lumen",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*\\b"
        },
        {
          "name": "constant.numeric.integer.lumen",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.lumen",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.lumen",
          "match": "\\b(null)\\b"
        }
      ]
    },
    "cell-definition": {
      "patterns": [
        {
          "match": "\\b(cell)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "keyword.control.lumen" },
            "2": { "name": "entity.name.function.lumen" }
          }
        },
        {
          "match": "\\b(async)\\s+(cell)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "keyword.control.lumen" },
            "2": { "name": "keyword.control.lumen" },
            "3": { "name": "entity.name.function.lumen" }
          }
        }
      ]
    },
    "control-keywords": {
      "patterns": [
        {
          "name": "keyword.control.lumen",
          "match": "\\b(cell|end|let|if|else|for|in|match|return|break|continue|while|loop|when|fn|async|await|try|catch|halt|yield|with|then|as|mut|self)\\b"
        }
      ]
    },
    "declaration-keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.lumen",
          "match": "\\b(record|enum|use|tool|grant|bind|effect|handler|handle|agent|pipeline|orchestration|machine|memory|guardrail|eval|pattern|process|trait|impl|type|const|import|from|pub|mod|macro|extern|union)\\b"
        }
      ]
    },
    "ai-keywords": {
      "patterns": [
        {
          "name": "keyword.other.lumen",
          "match": "\\b(role|expect|schema|emit|parallel|race|vote|select|timeout|observe|approve|checkpoint|escalate|comptime|where|step)\\b"
        }
      ]
    },
    "storage-types": {
      "patterns": [
        {
          "name": "storage.type.lumen",
          "match": "\\b(Int|Float|String|Bool|Bytes|Json|Null|Any|list|map|set|tuple|result|int|float|string|bool|bytes|json|ok|err)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.lumen",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.operator.arrow.lumen",
          "match": "=>|->|\\|>"
        },
        {
          "name": "keyword.operator.spread.lumen",
          "match": "\\.\\.\\.|\\.\\.=|\\.\\."
        },
        {
          "name": "keyword.operator.null-coalesce.lumen",
          "match": "\\?\\?|\\?\\."
        },
        {
          "name": "keyword.operator.comparison.lumen",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.lumen",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.lumen",
          "match": "\\*\\*|\\+\\+|[+\\-*/%]"
        },
        {
          "name": "keyword.operator.bang.lumen",
          "match": "!"
        }
      ]
    },
    "type-annotations": {
      "patterns": [
        {
          "match": "(->)\\s*([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.operator.arrow.lumen" },
            "2": { "name": "entity.name.type.lumen" }
          }
        },
        {
          "match": "(:)\\s*([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "punctuation.separator.type.lumen" },
            "2": { "name": "entity.name.type.lumen" }
          }
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.lumen",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
