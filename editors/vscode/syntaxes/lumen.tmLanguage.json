{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lumen",
  "scopeName": "source.lumen",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#raw-strings"
    },
    {
      "include": "#role-blocks"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#cell-definition"
    },
    {
      "include": "#let-declaration"
    },
    {
      "include": "#for-loop"
    },
    {
      "include": "#match-statement"
    },
    {
      "include": "#return-statement"
    },
    {
      "include": "#declaration-keywords"
    },
    {
      "include": "#control-keywords"
    },
    {
      "include": "#ai-keywords"
    },
    {
      "include": "#storage-types"
    },
    {
      "include": "#type-constructor"
    },
    {
      "include": "#function-call"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#type-annotations"
    },
    {
      "include": "#property-access"
    },
    {
      "include": "#named-argument"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.lumen",
          "match": "#.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.preprocessor.lumen",
          "match": "@\\w+"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lumen",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lumen",
              "match": "\\\\[\\\\\"nrt0{}]"
            },
            {
              "name": "meta.interpolation.lumen",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": {
                  "name": "punctuation.definition.interpolation.begin.lumen"
                }
              },
              "endCaptures": {
                "0": {
                  "name": "punctuation.definition.interpolation.end.lumen"
                }
              },
              "patterns": [
                {
                  "include": "source.lumen"
                }
              ]
            }
          ]
        }
      ]
    },
    "raw-strings": {
      "patterns": [
        {
          "name": "string.quoted.other.raw.lumen",
          "begin": "r\"",
          "end": "\""
        }
      ]
    },
    "role-blocks": {
      "patterns": [
        {
          "begin": "\\b(role)\\s+(system|user|assistant)\\s*:",
          "end": "$",
          "beginCaptures": {
            "1": {
              "name": "keyword.other.ai.lumen"
            },
            "2": {
              "name": "support.type.role.lumen"
            }
          },
          "contentName": "string.unquoted.role-content.lumen",
          "patterns": [
            {
              "name": "meta.interpolation.lumen",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": {
                  "name": "punctuation.definition.interpolation.begin.lumen"
                }
              },
              "endCaptures": {
                "0": {
                  "name": "punctuation.definition.interpolation.end.lumen"
                }
              },
              "patterns": [
                {
                  "include": "source.lumen"
                }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.lumen",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.octal.lumen",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.binary.lumen",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.float.lumen",
          "match": "\\b[0-9][0-9_]*(\\.[0-9][0-9_]*)?([eE][+-]?[0-9_]+)\\b"
        },
        {
          "name": "constant.numeric.float.lumen",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*\\b"
        },
        {
          "name": "constant.numeric.integer.lumen",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.lumen",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.lumen",
          "match": "\\b(null)\\b"
        }
      ]
    },
    "cell-definition": {
      "patterns": [
        {
          "match": "\\b(cell)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "keyword.control.lumen"
            },
            "2": {
              "name": "entity.name.function.definition.lumen"
            }
          }
        },
        {
          "match": "\\b(async)\\s+(cell)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "keyword.control.lumen"
            },
            "2": {
              "name": "keyword.control.lumen"
            },
            "3": {
              "name": "entity.name.function.definition.lumen"
            }
          }
        }
      ]
    },
    "let-declaration": {
      "patterns": [
        {
          "match": "\\b(let)\\s+(mut\\s+)?([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.control.lumen"
            },
            "2": {
              "name": "keyword.control.lumen"
            },
            "3": {
              "name": "variable.other.declaration.lumen"
            }
          }
        }
      ]
    },
    "for-loop": {
      "patterns": [
        {
          "match": "\\b(for)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s+(in)\\b",
          "captures": {
            "1": {
              "name": "keyword.control.lumen"
            },
            "2": {
              "name": "variable.other.declaration.lumen"
            },
            "3": {
              "name": "keyword.control.lumen"
            }
          }
        }
      ]
    },
    "match-statement": {
      "patterns": [
        {
          "match": "\\b(match)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.control.lumen"
            },
            "2": {
              "name": "variable.other.lumen"
            }
          }
        }
      ]
    },
    "return-statement": {
      "patterns": [
        {
          "match": "\\b(return)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.control.lumen"
            },
            "2": {
              "name": "variable.other.lumen"
            }
          }
        }
      ]
    },
    "control-keywords": {
      "patterns": [
        {
          "name": "keyword.control.lumen",
          "match": "\\b(cell|end|let|if|else|for|in|match|return|break|continue|while|loop|when|fn|async|await|try|catch|halt|yield|with|then|as|mut|self|spawn|finally)\\b"
        }
      ]
    },
    "declaration-keywords": {
      "patterns": [
        {
          "match": "\\b(record|enum|process|trait|impl|type|const|import|from|pub|mod|macro|extern|union)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.lumen"
            },
            "2": {
              "name": "entity.name.type.definition.lumen"
            }
          }
        },
        {
          "name": "keyword.declaration.lumen",
          "match": "\\b(record|enum|use|tool|grant|bind|effect|handler|handle|agent|pipeline|orchestration|machine|memory|guardrail|eval|pattern|process|trait|impl|type|const|import|from|pub|mod|macro|extern|union|state|transition|stage|to)\\b"
        }
      ]
    },
    "ai-keywords": {
      "patterns": [
        {
          "name": "keyword.other.ai.lumen",
          "match": "\\b(role|expect|schema|emit|parallel|race|vote|select|timeout|observe|approve|checkpoint|escalate|comptime|where|step|guard)\\b"
        }
      ]
    },
    "storage-types": {
      "patterns": [
        {
          "name": "storage.type.lumen",
          "match": "\\b(Int|Float|String|Bool|Bytes|Json|Null|Any|list|map|set|tuple|result|int|float|string|bool|bytes|json|ok|err|Void)\\b"
        }
      ]
    },
    "type-constructor": {
      "patterns": [
        {
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.type.constructor.lumen"
            }
          }
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "match": "\\.([a-z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "support.function.method.lumen"
            }
          }
        },
        {
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "support.function.call.lumen"
            }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.lumen",
          "match": "\\b(and|or|not|is)\\b"
        },
        {
          "name": "keyword.operator.arrow.lumen",
          "match": "=>|->|\\|>"
        },
        {
          "name": "keyword.operator.spread.lumen",
          "match": "\\.\\.\\.|\\.\\.=|\\.\\."
        },
        {
          "name": "keyword.operator.null-coalesce.lumen",
          "match": "\\?\\?|\\?\\."
        },
        {
          "name": "keyword.operator.comparison.lumen",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.compound-assign.lumen",
          "match": "\\+=|-=|\\*=|/=|%="
        },
        {
          "name": "keyword.operator.assignment.lumen",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.lumen",
          "match": "\\*\\*|\\+\\+|[+\\-*/%]"
        },
        {
          "name": "keyword.operator.bang.lumen",
          "match": "!"
        }
      ]
    },
    "type-annotations": {
      "patterns": [
        {
          "match": "(->)\\s*([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.operator.arrow.lumen"
            },
            "2": {
              "name": "entity.name.type.lumen"
            }
          }
        },
        {
          "match": "(:)\\s*([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "punctuation.separator.type.lumen"
            },
            "2": {
              "name": "entity.name.type.lumen"
            }
          }
        },
        {
          "match": "(:)\\s*(list|map|set|tuple|result)\\b",
          "captures": {
            "1": {
              "name": "punctuation.separator.type.lumen"
            },
            "2": {
              "name": "storage.type.lumen"
            }
          }
        }
      ]
    },
    "property-access": {
      "patterns": [
        {
          "match": "\\.([a-z_][a-zA-Z0-9_]*)(?!\\s*\\()",
          "captures": {
            "1": {
              "name": "variable.other.property.lumen"
            }
          }
        }
      ]
    },
    "named-argument": {
      "patterns": [
        {
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(:)\\s*(?!:)",
          "captures": {
            "1": {
              "name": "variable.parameter.label.lumen"
            },
            "2": {
              "name": "punctuation.separator.key-value.lumen"
            }
          }
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.lumen",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}